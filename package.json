{
  "name": "@globus/react-auth-context",
  "version": "0.0.1",
  "description": "A React context for integrating Globus Auth into your application using the Globus JavaScript SDK",
  "main": "dist/umd/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/umd/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node scripts/build.js && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly && api-extractor run",
    "test": "jest"
  },
  "author": "Joe Bottigliero",
  "license": "Apache-2.0",
  "peerDependencies": {
    "@globus/sdk": "^3.4.1",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@globus/sdk": "^3.4.1",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@tsconfig/create-react-app": "^2.0.5",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "api-extractor": "^99.99.99",
    "esbuild": "0.21.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-location-mock": "^2.0.0",
    "prettier": "3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.1.5",
    "typescript": "^5.4.5"
  }
}
